<!-- groups -->

<div class="card">
  <% unless low_data %>
	  <div class="card_corner_cut_out"></div>
	  <%= render "token/avatar", token: group.token, position: :token_card_link %>
	  <%= render "groups/time_ago", group: group %>
	  <%= render "groups/seent", group: group %>
	<% end %>
	<div align="center">
		<% group_link_path = @group_shown ? search_path(query: group.token) : group_path(group.token) %>
		<p><%= link_to "Group #{group.token}", group_link_path %></p>
		
		<% if group.body.present? %>
      <p id="<%= 'justified_body_text' if group.body.size > 150 %>">
        <%= render "app/body", item: group %>
      </p>
		<% end %>
		
		<% if @group_shown %>
			<%= render "groups/nav_table", group: group %>
			<div id="insert_form_anchor"></div>
		<% end %>
	</div>
	<% if low_data %>
	  <hr>
	<% end %>
</div>
