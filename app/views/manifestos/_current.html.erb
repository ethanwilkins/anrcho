<!-- manifestos -->

<div class="card" id="current_manifesto_card" <%= (defined?(hidden) and !hidden) ? "" : "hidden" %>>
  <% unless @about_page %>
	  <%= link_to toggle_manifesto_path, remote: true do %>
	    <div id="current_manifesto_exit">
	      <i class="fa fa-times"></i>
	    </div>
	  <% end %>
	<% end %>
	<%= link_to manifestos_path do %>
	  <div align="center">
		  <p id="manifesto_welcome_text">
			  Welcome to Anrcho.
		  </p>
		  <% unless low_data %>
			  <% if current_manifesto %>
		      <p id="current_manifesto_text">
				    <%= current_manifesto.body.html_safe %>
		      </p>
	      <% else %>
	        <p align="center">
				    There aren't any ratified manifestos yet.
		      </p>
	      <% end %>
		  <% end %>
	  </div>
	<% end %>
	<% if low_data %>
	  <%= current_manifesto.body if current_manifesto %>
	  <hr>
	<% end %>
	<%= link_to "How does the site work?", tips_path, class: :bottom_right_link, align: :center %>
	<% if low_data %>
	  <hr>
	<% end %>
</div>


