<!-- manifestos -->

<script>
	<%= render "manifestos/fader.js" %>
</script>

<div class="card" id="current_manifesto_card" <%= (defined?(hidden) and !hidden) ? "" : "hidden" %>>
	<%= link_to toggle_manifesto_path, remote: true do %>
	<div align="center">
		<p id="manifesto_welcome_text">
			Welcome to Anrcho.
		</p>
		<p id="current_manifesto_text">
			<% if current_manifesto %>
				<%= current_manifesto.body.html_safe %>
			<% else %>
				There aren't any ratified manifestos yet.
			<% end %>
		</p>
	</div>
	<% end %>
</div>
