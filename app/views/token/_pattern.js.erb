// token

var pattern = <%=j pattern.to_json %>

var <%=j token %> = setInterval(function() {
	var id = Math.round(Math.random() * pattern.length);
	var r = Math.round(Math.random() * 255);
	var g = Math.round(Math.random() * 255);
	var b = Math.round(Math.random() * 255);
	var pixel = $("#avatar_pixel_" + pattern[id-1]);
	pixel.css("background", "rgb(" + r + ", " + g + ", " + b + ")");
}, 100);
