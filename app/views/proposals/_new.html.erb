<!-- proposals -->

<div align="center" id="new_proposal_form">
	<script><%= render 'proposals/select_change.js' %></script>
	<%= form_for @proposal do |f| %>
		<%= hidden_field_tag :group_id, @group.id if @group %>
		<p>
			<%= f.text_field :title, placeholder: "Title" %>
		</p>
		<table>
			<tr>
				<td>
					<%= f.text_area :body, placeholder: "Body" %>
				</td>
				<td>
					<%= link_to add_proposal_image_path, remote: true do %>
						<i class="fa fa-picture-o"></i>
					<% end %>
				</td>
			</tr>
		</table>
		
		<p id="hidden_file_field" hidden><%= f.file_field :image %></p>
		
		<p><%= f.select :action, options_for_select(action_types(@group)),
			id: :proposal_action_select %></p>
			
		<p id="hidden_hashtag_field" hidden>
			<%= f.text_field :misc_data, placeholder: "Add hashtags..." %>
		</p>
		
		<p>
			<%= f.label "Local proposal" %>
			<%= check_box_tag :local %>
		</p>
		
		<%= f.submit "Submit" %>
	<% end %>
</div>