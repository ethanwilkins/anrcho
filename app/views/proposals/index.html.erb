<!-- proposals -->

<!-- categoried proposals are not loading correctly
ex: switch to :voting, still loads from all other sections -->

<script>
	<%= render "proposals/infinite_scroll.js" %>
	<%= render "proposals/fader.js" %>
</script>

<div class="card">
	<div align="center">
		<%= render "app/nav_table" %>
		<% if @all_items.empty? %>
			<p>There aren't any proposals yet.</p>
		<% end %>
		<div id="insert_form_anchor"></div>
	</div>
</div>

<div id="proposal_sections">
	<%= link_to switch_section_path(:voting), remote: true do %>
		<div id="voting_section">
			<div class="section_text">Voting</div>
		</div>
	<% end %>
	<%= link_to switch_section_path(:revision), remote: true do %>
		<div id="revision_section">
			<div class="section_text">Revision</div>
		</div>
	<% end %>
	<%= link_to switch_section_path(:ratified), remote: true do %>
		<div id="ratified_section">
			<div class="section_text">Ratified</div>
		</div>
	<% end %>
	<%= link_to switch_section_path(:all), remote: true do %>
		<div id="all_section">
			<div class="section_text">All</div>
		</div>
	<% end %>
</div>

<div id="feed_container_anchor"></div>
<%= render "proposals/feed_container" %>
